<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logInBg"
    tools:context=".Login.OTPActivity">
    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/my_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_edesg_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    <EditText
        android:id="@+id/newactotp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ettextbrown"
        android:hint="@string/enter_otp"
        />

        <TextView
            android:id="@+id/resendotp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resend_otp"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/ettextbrown"
            android:layout_below="@+id/newactotp"
            android:layout_toRightOf="@+id/submitotppp"
            android:layout_toEndOf="@+id/submitotppp" />

    <Button
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/newactotp"
        android:id="@+id/submitotppp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"/>



    <TextView
        android:layout_below="@+id/submitotppp"
        android:id="@+id/sent"
        android:text="@string/otp_sent"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:textSize="20dp"
        android:layout_below="@id/sent"
        android:id="@+id/otpresponse"
        android:text="@string/otp_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        </RelativeLayout>

</RelativeLayout>
