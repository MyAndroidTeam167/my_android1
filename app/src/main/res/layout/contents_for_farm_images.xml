<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
   >
        <RelativeLayout
            android:id="@+id/image_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
    >
<!--
            android:background="@color/colorPrimaryDark"
-->
            <TextView
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/activity_title_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_sowing"
                android:drawablePadding="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:backgroundTintMode="src_over"
                android:drawableLeft="@drawable/ic_content_paste_black_18dp"/>


            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@id/activity_title_image"
                android:scaleType="fitXY"
                android:src="@drawable/design_element"
                android:id="@+id/activity_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp" />

            <TextView
                android:visibility="gone"
                android:textColor="@color/white"
                android:layout_below="@id/activity_image"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Since Glide is going to perform a network request to load images via the internet, we need to include the permission INTERNET in our AndroidManifest.xml."
                android:id="@+id/activity_desc_image"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_11ssp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/assign_on"
                android:drawableLeft="@drawable/ic_event_available_black_18dp"
                android:layout_below="@id/activity_desc_image"
                android:id="@+id/scheduleded_date_image"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_width="@dimen/_100sdp"
                android:textSize="@dimen/_10ssp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Completed On"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/ic_event_available_black_18dp"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_below="@id/activity_desc_image"
                android:id="@+id/completed_date_image"
                android:layout_width="@dimen/_100sdp"
                android:textSize="@dimen/_10ssp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    <!--<View
        android:layout_below="@id/image_rel"
        android:background="#8C696969"
        android:layout_width="match_parent"
        android:layout_height="1px"/>-->
    </android.support.v7.widget.CardView>
</RelativeLayout>
