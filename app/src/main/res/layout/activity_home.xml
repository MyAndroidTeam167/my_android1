<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestPackage.Activity.HomeActivity">


    <Button
        android:id="@+id/customnoti"
        android:text="custom noti"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


    <LinearLayout
        android:id="@+id/welcomelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME"
            style="bold"
            android:textColor="@android:color/holo_purple"
            android:textSize="40sp"/>
    <TextView
        android:id="@+id/useremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        style="bold"
        android:textColor="@android:color/holo_purple"
        android:textSize="40sp"/>
        <TextView
            android:id="@+id/usermobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME"
            style="bold"
            android:textColor="@android:color/holo_purple"
            android:textSize="40sp"/>
        <TextView
            android:id="@+id/userpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME"
            style="bold"
            android:textColor="@android:color/holo_purple"
            android:textSize="40sp"/>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/homelogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            />
    </LinearLayout>

            <TextView
                android:textSize="17sp"
                android:id="@+id/msgser"
                android:layout_below="@+id/welcomelayout"
                android:text="Push Notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="17sp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/welcomelayout"
                android:layout_toRightOf="@+id/msgser"
                android:text="new msg"
                android:id="@+id/messagefrmsrv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />





            <TextView
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:id="@+id/smslabel"
                android:layout_below="@+id/msgser"
                android:text="Otp :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/messagefrmsrv"
                android:layout_toRightOf="@+id/smslabel"
                android:text="new msg"
                android:id="@+id/smsreciever"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/lv"
                android:layout_below="@+id/smslabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ListView>


        </RelativeLayout>



</RelativeLayout>
