<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <!--<Spinner
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
>
    </Spinner>-->



    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@id/vp_slider"
        android:id="@+id/rel_spinner"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_spinner"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal">

        <Spinner

            android:id="@+id/mySpinnersetlang"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_spinner"
            android:layout_centerHorizontal="true"
            android:popupBackground="#f6fbfc"
            android:spinnerMode="dropdown">
        </Spinner>

        <!--
        android:background="#BF006400"
                    android:background="#ff917e"
        android:popupBackground="#99006400"-->
        <ImageView
            android:layout_marginRight="@dimen/_5sdp"
            android:elevation="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/mySpinnersetlang"
            android:layout_alignRight="@+id/mySpinnersetlang"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp" />
    </RelativeLayout>

</LinearLayout>