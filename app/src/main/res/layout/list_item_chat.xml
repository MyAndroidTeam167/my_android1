<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageViewLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="6.5dp"
        android:layout_weight="0.2"
        android:src="@drawable/arrow_bg2" />

    <LinearLayout
        android:id="@+id/listItemLL"
        android:layout_width="250dp"
        android:layout_marginTop="6.5dp"
        android:layout_marginLeft="-12dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commentBy"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="270dp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:inputType="textMultiLine"
            android:text="This is some response Entered by the farmer And this response is for testing purpose."
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="serif"
            android:text="01-02-2018 4:25 P.M."
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imageViewRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-9dp"
        android:layout_marginTop="6.5dp"
        android:layout_weight="0.2"
        android:src="@drawable/arrowbg1" />

</LinearLayout>